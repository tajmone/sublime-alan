#############################################
#  Alan IF 3 Syntax for Sublime Text 3      #
#  https://github.com/tajmone/sublime-alan  #
#############################################

root = true

## Repository Configurations
############################
[.{git*,editorconfig,*.yml}]
charset = utf-8
end_of_line = lf
indent_size = unset
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

## Sublime Text
###############
[*.{sublime-*,tmPreferences,hidden-tmTheme,YAML-propertyList}]
charset = utf-8
end_of_line = unset
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.sublime-snippet]
indent_style = tab
indent_size = unset

## Shell Scripts
################
[*.sh]
charset = utf-8
end_of_line = lf
indent_size = unset
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

## Markdown GFM
###############
[*.md]
charset = utf-8
end_of_line = unset
indent_size = unset
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

## Python
#########
[*.py]
charset = utf-8
end_of_line = unset
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

## Miscellanea
##############
[*.{cfg,json}]
charset = utf-8
end_of_line = unset
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# EOF #
